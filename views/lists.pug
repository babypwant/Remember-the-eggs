extends layout
append head
  link(rel="stylesheet" href="/stylesheets/list-edit.css")
  script(src="/javascripts/index.js" type="module" defer)
block content
  form(method='post' action='/lists' class='login-form')
    div(class="login-form-wrapper")
      label.list-name-header List Name:
      div(class="form-div")
        input(type='text' name='name' required)
      label.username-header Select User
      div(class="form-div")
        select(name='userId' class=user-select-box required)
          each user in users
            option(value=user.id)=user.username
      label.description-header List Description
      div(class="form-div")
        textarea(name='description')
      button(type='submit' class='list-button') Submit
      a(href='/' class='form__button--secondary' ) Cancel
