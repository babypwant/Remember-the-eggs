extends layout
append head
  link(rel="stylesheet" href="/stylesheets/list-edit.css")
  script(src="/javascripts/index.js" type="module" defer)
block content
  form(method='post' action='/lists' class='login-form')
    div(class="login-form-wrapper")
      label(class="signup-label").list-name-header List Name:
      div(class="form-div")
        input(type='text' name='name' required)
      label(class="signup-label").username-header Select User
        input(type="hidden" name="_csrf" value=token)
      div(class="form-div")
        select(name='userId'id="sources" placeholder="User" class=user-select-box required).option-bar
          each user in users
            option(value=user.id)=user.username
      label(class="signup-label").description-header List Description
      div(class="form-div")
        textarea(name='description' class='description-input')
      button(type='submit' class='list-button' class='form__button--secondary' class='btn-3') Submit
      a(href='/' class='form__button--primary' ) Cancel
