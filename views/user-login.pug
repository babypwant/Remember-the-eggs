extends layout

block content
  form(class="login-form" method='post', action='/login')
    div(class="login-form-wrapper")
      h2(class="signup-title") Please Log-in
      input(type="hidden" name="_csrf" value=token)
      div(class="form-div")
        label(for="email" class="signup-label") Email
        input(type="text" name="email" class="signup-input" required)
      div(class="form-div")
        label(for="password" class="signup-label") Password
        input(type="password" name="password" class="signup-input" required)
      div(class="form-div")
        button(type="submit" class="btn") Log In
      div
        p(class="signup-up-here-msg") Not a user?
        a(class="signup-link" href="/signup") Register
