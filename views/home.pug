extends layout
append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/home.css")
  script(src="/javascripts/home.js" type="module" defer)
block content
  div(id="reminder")= "To Do:"
  div(id="listBoard")
    each list in lists
      div(class="listContainer form-wrapper" id=list.id)
        div(class="listBox")
          h1(class="listName")= list.name
          div(class="descriptionBox")
            h2(class="descriptionName")= "Description"
            p(class="listDescription").innerHTML= list.description
          div(class="taskBox")
            h2(class="taskName")= "Tasks"
            each task in tasks
              if list.id === task.listId
                a(href=`/tasks/${task.id}` class="task" id=task.id name=list.id)=`* ${task.name}`
                  p(class="taskDescription")=task.description
          div(id="buttonBox")
            a(href=`/lists/${list.id}` class="editButton button" type="redirect" url)
              p(class="edit")="Edit"
            button(class="deleteButton button " type="delete" id=list.id)
              p(class="edit")= "Delete"
  script(type="module" src="/public/javascripts/home.js")
